<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">

    <TableRow
        android:layout_width="633dp"
        android:layout_height="464dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Внеси Шифра на Патрола"
                android:textAlignment="center"
                android:textColor="#F7070000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/sifraPatrola"
                android:layout_width="match_parent"
                android:layout_height="82dp"
                android:ems="10"
                android:inputType="numberPassword" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="Внеси Шифра на Корисник"
                android:textAlignment="center"
                android:textColor="#F80A0000"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/sifraKorisnik"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:ems="10"
                android:inputType="numberPassword" />

            <Button
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="Најави се"
                android:textSize="30sp" />
        </LinearLayout>
    </TableRow>

</androidx.constraintlayout.widget.ConstraintLayout>